include /universalHeader

doctype html
head
  link(rel='stylesheet' type='text/css' href='../public/styles.css')
body
+universalHeader
#topicContent.content
  if !notes
    #noNotesFound
      h1#noNotesFoundHeader
        |No Notes Found for this topic!
        br
        |Add your first note under #{topic}:
        br
        br
        br
        a(href='/note' + "?topic=" + topic id="noNoteLink")
          |Create a Note
      br
      a(href='/profile')
        |Return to list of topics
  else
    h1
      |#{topic}
    a(href='/note' + "?topic=" + topic id="createNoteLink")
      |Create a new note under #{topic}
    form#filterForm(action='/topic/'+topic method='get')
      h3
        |Filters
      label(for='filterTags')
        |Tags (enter tags separated by commas):
        input#filterTags(type='text' name='filterTags')
      #filterDates
        label(for='created')
          |Created
          input#created(type='radio' name='created-updated' value='created' checked)
        label(for='updated')
          |Updated
          input#updated(type='radio' name='created-updated' value='updated')
        label(for='filterEarlyDate')
          |Earliest Date:
          input#filterEarlyDate(type='date' name='filterEarlyDate')
        label(for='filterLateDate')
          |Latest Date:
          input#filterLateDate(type='date' name='filterLateDate')
      label(for='filterTitle')
        |Title (exact match only):
        input#filterTitle(type='text' name='filterTitle')
      input(type='hidden' name='filters' value='true')
      button(type='submit') Apply
    br
    #noteList
      each note in notes
        a(href='/notes/'+ note.title class="noteCard")
          .noteCardTitle
            |#{note.title}
          .noteCardInfo
            |Created On: #{note.dateCreated}
            br
            if(note.dateUpdated)
              |Updated On: #{note.dateUpdated}
              br
            if(note.tags.length > 3)
              |Tags: #{note.tags[0]}, #{note.tags[1]}, #{note.tags[2]}...
            else
              |Tags: #{note.tags.join(",")}
    br
    br
    a(href='/profile')
      |Return to list of topics
