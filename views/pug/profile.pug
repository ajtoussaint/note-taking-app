include /universalHeader

doctype html
head
  link(rel='stylesheet' type='text/css' href='../public/styles.css')
body
  +universalHeader
  #profileContent.content
    #topicContainer
      if !topicList
        h1#noTopicsFound
          |No Topics Found!
          br
          |Add some topics to organize your notes
      else
        ul#topicList
          each topic in topicList
            li(class="topic")
              a(href='/topic/'+ topic class="topicLink")
                |#{topic}
    #createTopic
      form#newTopicForm(action='/topic' method="post")
        label(for='topic')
          |New Topic Name:
          input#topicInput(type="text" name="topic")
        button(type="submit") Create New Topic
    br
    a(href='/editTopics')
      |Edit Topics
